        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdTowaru)

        <div class="form-group">
            @Html.LabelFor(model => model.NazwaTowaru, htmlAttributes: new { @class = "control-label col-md-2" })
